{
  "rules": [
    {
      "name": "Authorship Inheritance",
      "description": "An entity that is part of a whole is also the author of the work the whole is part of.",
      "premises": [
        {
          "predicate": "part_of",
          "args": [
            "entity",
            "whole"
          ]
        },
        {
          "predicate": "played_role_in",
          "args": [
            "whole",
            "work"
          ]
        }
      ],
      "conclusion": {
        "predicate": "author_of",
        "args": [
          "entity",
          "work"
        ]
      }
    },
    {
      "name": "Marriage Transitivity",
      "description": "If person1 is married to person2 and person2 is married to person3, then person1 is married to person3.",
      "premises": [
        {
          "predicate": "married_to",
          "args": [
            "person1",
            "person2"
          ]
        },
        {
          "predicate": "married_to",
          "args": [
            "person2",
            "person3"
          ]
        }
      ],
      "conclusion": {
        "predicate": "married_to",
        "args": [
          "person1",
          "person3"
        ]
      }
    }
  ]
}