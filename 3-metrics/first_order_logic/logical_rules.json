{
  "rules": [
    {
      "name": "Type Inheritance",
      "description": "Inheriting types from entities to roles",
      "premises": [
        {
          "predicate": "has_type",
          "args": [
            "entity",
            "type"
          ]
        },
        {
          "predicate": "played_by",
          "args": [
            "role",
            "actor"
          ]
        }
      ],
      "conclusion": {
        "predicate": "has_type",
        "args": [
          "role",
          "type"
        ]
      }
    },
    {
      "name": "Location Association",
      "description": "Associating entities with locations they are located at",
      "premises": [
        {
          "predicate": "located_at",
          "args": [
            "entity",
            "location"
          ]
        }
      ],
      "conclusion": {
        "predicate": "has_type",
        "args": [
          "entity",
          "location"
        ]
      }
    },
    {
      "name": "Role Actor Inheritance",
      "description": "Inheriting actors from roles to works",
      "premises": [
        {
          "predicate": "played_by",
          "args": [
            "role",
            "actor"
          ]
        },
        {
          "predicate": "starring",
          "args": [
            "work",
            "actor"
          ]
        }
      ],
      "conclusion": {
        "predicate": "has_type",
        "args": [
          "work",
          "actor"
        ]
      }
    }
  ]
}