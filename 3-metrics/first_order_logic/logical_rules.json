{
  "rules": [
    {
      "name": "Author-Work Location",
      "description": "If an author is located at a certain location, then their work is also located there.",
      "premises": [
        {
          "predicate": "located_at",
          "args": [
            "Person",
            "Location"
          ]
        },
        {
          "predicate": "author_of",
          "args": [
            "Person",
            "Work"
          ]
        }
      ],
      "conclusion": {
        "predicate": "located_at",
        "args": [
          "Work",
          "Location"
        ]
      }
    },
    {
      "name": "Whole Part Location",
      "description": "If a part is located at the same location as its whole, then the whole is also located there.",
      "premises": [
        {
          "predicate": "located_at",
          "args": [
            "Entity",
            "Location"
          ]
        },
        {
          "predicate": "part_of",
          "args": [
            "Entity",
            "Whole"
          ]
        }
      ],
      "conclusion": {
        "predicate": "located_at",
        "args": [
          "Whole",
          "Location"
        ]
      }
    },
    {
      "name": "Work Type Inheritance",
      "description": "If a work is of a certain type and its author is located at the same location as another work that is also of that type, then the second work is also of that type.",
      "premises": [
        {
          "predicate": "type_of",
          "args": [
            "Entity",
            "Type"
          ]
        },
        {
          "predicate": "author_of",
          "args": [
            "Person",
            "Work1"
          ]
        },
        {
          "predicate": "located_at",
          "args": [
            "Person",
            "Location"
          ]
        },
        {
          "predicate": "type_of",
          "args": [
            "Entity",
            "Type"
          ]
        },
        {
          "predicate": "part_of",
          "args": [
            "Entity",
            "Whole2"
          ]
        }
      ],
      "conclusion": {
        "predicate": "type_of",
        "args": [
          "Whole2",
          "Type"
        ]
      }
    }
  ]
}